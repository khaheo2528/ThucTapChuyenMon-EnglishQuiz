<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="match_parent"
    android:backgroundTint="@color/backgroundColor"
    android:background="#ecf0f1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Tasks"
        android:textSize="36sp"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter question"
        android:textSize="28sp"/>
    <EditText
        android:id="@+id/edtOptA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter option A"
        android:textSize="28sp"/>
    <EditText
        android:id="@+id/edtOptB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter option B"
        android:textSize="28sp"/>
    <EditText
        android:id="@+id/edtOptC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter option C"
        android:textSize="28sp"/>
    <EditText
        android:id="@+id/edtOptD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter option D"
        android:textSize="28sp"/>
    <EditText
        android:id="@+id/edtanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter your answer"
        android:textSize="28sp"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="26sp"
            android:id="@+id/btnEdit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="26sp"
            android:layout_marginStart="10dp"
            android:id="@+id/btnCancelEdit"/>

    </LinearLayout>

</LinearLayout>